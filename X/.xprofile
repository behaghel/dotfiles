# i3 uses $TERMINAL on $mod+Return
export TERMINAL=kitty
# otherwise firefox doesn't scroll with touch screen
export MOZ_USE_XINPUT2=1

# only useful when on multiscreen
#export GDK_DPI_SCALE=0.5
#export GDK_SCALE=2

export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_FONT_DPI=96
# TODO: allow this shared file to load machine local instructions
[ -x $HOME/.local/bin/x-startup.sh ] && $HOME/.local/bin/x-startup.sh
